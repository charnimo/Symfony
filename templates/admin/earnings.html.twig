{# templates/admin/earnings.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Earnings</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            background-color: #000000; /* Black background */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #ffffff; /* White text for better contrast */
        }
        .earnings-card {
            padding: 50px;
            border-radius: 10px;
            background-color: #333333; /* Dark grey background for the card */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            text-align: center;
            width: 400px; /* Increase the width of the card */
        }
        .earnings-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .earnings-amount {
            font-size: 2.5rem;
            color: #28a745; /* Green color for the earnings amount */
        }
    </style>
</head>
<body>
    <div class="earnings-card">
        <div class="earnings-title">
            Total Earnings
        </div>
        <div class="earnings-amount">
            {{ totalEarnings|number_format(2, '.', ',') }} â‚¬
        </div>
    </div>
</body>
</html>
